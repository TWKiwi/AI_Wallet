<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textColor="#0000E3"
    android:background="#0080FF"
    tools:context="com.example.dbconnertingsystem.MainActivity" >


    <Button
        android:id="@+id/GPSBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="正在定位中..."
        android:gravity="center"
        android:textColor="#0000E3"
        android:background="#ACD6FF"
        android:layout_weight="2"
        android:textSize="18sp"/>

    <TableRow
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#2828FF"
            android:background="#66B3FF"
            android:layout_gravity="center_horizontal"
            android:text="想吃什麼"
            android:gravity="center"
            android:textSize="48sp"
            android:id="@+id/smartbutlerTxt"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#2828FF"
            android:background="#46A3FF"
            android:layout_gravity="center_horizontal"
            android:text="想住哪裡"
            android:gravity="center"
            android:textSize="48sp"
            android:id="@+id/smartliveTxt"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#2828FF"
            android:background="#66B3FF"
            android:layout_gravity="center_horizontal"
            android:text="掛號看診"
            android:gravity="center"
            android:textSize="48sp"
            android:id="@+id/smarthealthTxt"
            android:onClick="onClick"/>
    </TableRow>
    <Button
        android:id="@+id/ProposalBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="系統推薦商品"
        android:textSize="36sp"
        android:textColor="#2828FF"
        android:background="#84C1FF"
        android:layout_weight="0"/>


    <TableRow
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="時段"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#0000C6"/>

        <!--<TextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:text="食物類別"-->
            <!--android:textSize="24sp"-->
            <!--android:gravity="center"-->
            <!--android:textColor="#842B00"/>-->

    </TableRow>

    <TableRow
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/spinner_fclass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawSelectorOnTop="true"
            android:gravity="center"
            android:textColor="#2828FF"
            android:background="#66B3FF"/>

    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="GPS相關設定"
        android:background="#46A3FF"
        android:id="@+id/setGPSBtn"/>

</LinearLayout>