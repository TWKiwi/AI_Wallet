<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/PhotoPic"
                android:background="#66B3FF"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="拍照"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="#2828FF"
                android:background="#46A3FF"
                android:id="@+id/TakePic"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="入帳"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="#46A3FF"
                android:background="#2828FF"
                android:id="@+id/saveBtn"
                android:layout_weight="1" />
        </LinearLayout>




    </TableRow>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="記錄名稱\n(可不填)"
            android:id="@+id/BuyText"
            android:textColor="#2828FF"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/buyName"
            android:layout_weight="1"
            android:textColor="#2828FF"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="消費型別"
                android:id="@+id/TypeText"
                android:textColor="#2828FF"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/typeName"

                android:entries="@array/Consumer_types"
                android:spinnerMode="dialog"/>
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="金額"
                android:id="@+id/PriceText"
                android:textColor="#2828FF"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/priceNum"
                android:layout_weight="1"
                android:inputType="number"
                android:text=""
                android:textColor="#2828FF"/>
        </TableRow>

    </TableRow>


</LinearLayout>

