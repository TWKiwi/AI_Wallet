<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFCBB3"

    android:orientation="vertical">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="顯示設定"
            android:textColor="#842B00"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="額度顯示方式 :"
            android:textColor="#842B00"
            android:gravity="center"/>


        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:id="@+id/ScaleTextStyleRadioGroup">


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:textColor="#842B00"
                android:gravity="center"
                android:text="累計花費/本月預算"
                android:id="@+id/radioButton1" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:textColor="#842B00"
                android:gravity="center"
                android:text="剩餘預算/本月預算"
                android:id="@+id/radioButton2" />


            </RadioGroup>


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="智能管家設定"
            android:textColor="#842B00"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="設定月預算額 :"
            android:textColor="#842B00"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:id="@+id/setMBudget"
            android:textColor="#842B00"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="left" />
        </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="每月固定支出 :"
            android:textColor="#842B00"
            android:gravity="center" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:id="@+id/regularCost"
            android:textColor="#842B00"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="left" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/aboutUs"
            android:text="關於我們"
            android:textSize="24sp"
            android:background="#FFBD9D"
            android:gravity="center"/>
    </TableRow>




    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="儲存設定"
            android:textSize="24sp"
            android:textColor="#FFBD9D"
            android:id="@+id/saveBtn"
            android:background="#842B00"
            android:layout_gravity="bottom" />
        </TableRow>

</LinearLayout>
